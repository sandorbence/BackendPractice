@using BlogApp.Models
@model Article

<h2>@(Model.Id == 0 ? "Create New Post" : "Update Post")</h2>
<form method="post">
    <input asp-for="@Model.ApplicationUserId" hidden value="@ViewBag.UserId" />
    <div class="form-group">
        <input asp-for="@Model.Title" type="text" class="form-control" placeholder="Title of your post">
    </div>
    <div class="form-group">
        <textarea asp-for="@Model.Text" class="form-control" rows="15" placeholder="Start typing..." maxlength="5000"></textarea>
    </div>
    <div class="form-group">
        @if (Model.Id == 0)
        {
            <input class="btn btn-secondary" type="submit" value="Create Post">
        }
        else
        {
            <input class="btn btn-secondary" type="submit" value="Update Post">
        }
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}