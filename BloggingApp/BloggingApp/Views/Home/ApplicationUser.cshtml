@using BlogApp.Models.Models
@using BlogApp.Models.ViewModels
@model ApplicationUserViewModel

<h3>User @Model.ApplicationUser.Name</h3>
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="ApplicationUser.Email" class="form-control" disabled />
                <label asp-for="ApplicationUser.Email" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="ApplicationUser.Name" class="form-control" disabled />
                <label asp-for="ApplicationUser.Name" class="form-label"></label>
                <span asp-validation-for="ApplicationUser.Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="ApplicationUser.PhoneNumber" class="form-control" disabled />
                <label asp-for="ApplicationUser.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="ApplicationUser.PhoneNumber" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<h3 class="mt-3">Articles by User</h3>
<ul class="list-unstyled">
    @foreach (Article article in @Model.Articles)
    {
        <li class="my-3">
            <a class="link-light text-decoration-none" asp-controller="Home" asp-action="Article" asp-route-articleId="@article.Id">
                <h5>@article.Title</h5>
            </a>
        </li>
    }
</ul>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
